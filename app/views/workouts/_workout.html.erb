<div id="<%= dom_id workout %>">

<article id="article">

<table role="grid">
  <thead>
    <tr>
      <th scope="col"><strong><%= workout.date %> | <%= workout.name%></strong></th>
      <th scope="col"><strong>Exercise</strong></th>
      <th scope="col"><strong>Weight</strong></th>
      <th scope="col"><strong>Sets</strong></th>
      <th scope="col"><strong>Repetitions</strong></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td><%= workout.exercise1 %></td>
      <td><%= workout.exercise1_weight %></td>
      <td><%= workout.exercise1_sets %></td>
      <td><%= workout.exercise1_reps %></td>


    </tr>
    <tr>
      <th scope="row">2</th>
      <td><%= workout.exercise2 %></td>
      <td><%= workout.exercise2_weight %></td>
